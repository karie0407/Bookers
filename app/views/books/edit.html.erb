<h1>Editing Book</h1>
<% if @book.errors.any? %>
   <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
     <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
     <% end %>
  </ul>
<% end %>
  <%= form_with model: @book,url: book_path(@book.id),method: :patch do |f| %>
  <div class="text-success">
  <%= flash[:notice] %>
</div>
  <div class="field">
    <label for="book_title">Title</label>
  <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
  <%= f.text_area :body %>
  </div>
  <div class="actions">
  <%= f.submit 'Update Book' %></div>
  <a class="show"><%= link_to "Show",book_path(@book.id) %></a>
  |
  <a class="Back"><%= link_to "Back",books_path %></a>
<% end %>
